
@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SportsGo</title>
</head>
<body>


    <div class="card card-default" ng-repeat="category in listGroups track by $index">
        <div class="card-header">
            <h3 class="card-title"><i class="zmdi zmdi-graduation-cap"></i> {{category.Descripcion}}</h3>
        </div>

        <div class="list-group">
            <a href="#" class="list-group-item withripple" ng-repeat="group in category.Groups | filter:search:strict">
                <img ng-src="{{ group.CodigoArchivoImagenPerfil }}" class="img-circle" />
                <span class="badge"> + </span>
                {{group.NombreContacto}}
            </a>
            <a href="#" class="list-group-item withripple text-center">Ver todos...</a>
        </div>
    </div>

    


</body>
</html>