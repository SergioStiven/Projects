<div class="sportsFields">
    <img src="~/Content/assets/img/BasketballCourt.png" />
    <a class="pivot" ng-class="{'selected' : Categories.category.PosicionCampo === 1}" ng-click="Categories.category.PosicionCampo = 1"></a> <!-- Pivot -->
