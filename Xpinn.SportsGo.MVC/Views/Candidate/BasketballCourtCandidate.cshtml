    top: 17%;
    left: 12%;
}

.sportsFields > a.alaPivot {
    top: 31%;
    left: 16.5%;
}

.sportsFields > a.escolta {
    top: 67%;
    left: 19.3%;
}

.sportsFields > a.base {
    top: 42%;
    left: 29.5%;
