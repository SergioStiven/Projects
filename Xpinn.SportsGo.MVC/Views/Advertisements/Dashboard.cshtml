@{
    Layout = "~/Views/Shared/Advertiser_Layout.cshtml";
}
<link href="~/bower_components/custom-select.css" rel="stylesheet" />
<div ng-controller="metricaAdsController">

    <!-- Carousel Counters -->

    <div id="carousel-example-generic" class="ms-carousel carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <!-- Ads -->
            <div class="item active">
                <!-- Total Ads -->
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="panel panel panel-primary panel-dark text-center">
                        <div class="panel-body" style="background-color:#028ac7">
                            <h2 class="" style="margin:0">{{metricas.ads}}</h2>
                            <i class="fa fa-3x fa-newspaper-o"></i>
                            <p class="mt-2 no-mb lead small-caps" translate="LBL_ADS"></p>
                        </div>
                    </div>
                </div>
                <!-- Total Ads Last Month -->
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="panel panel panel-primary panel-dark text-center">
                        <div class="panel-body" style="background-color:#028ac7">
                            <h2 class="counter" style="margin:0" ng-bind="metricas.adsLastMonth"></h2>
                            <i class="fa fa-3x fa-calendar"></i>
                            <p class="mt-2 no-mb lead small-caps" translate="LBL_ADS_LAST_MONTH"></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Clicks -->
            <div class="item">
                <!-- Total Cliks -->
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="panel panel panel-primary panel-dark text-center">
                        <div class="panel-body" style="background-color:#028ac7">
                            <h2 class="" style="margin:0">{{metricas.clicks}}</h2>
                            <i class="fa fa-3x fa-mouse-pointer"></i>
                            <p class="mt-2 no-mb lead small-caps" translate="LBL_CLICKS"></p>
                        </div>
                    </div>
                </div>
                <!-- Total Cliks Last Month -->
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="panel panel panel-primary panel-dark text-center">
                        <div class="panel-body" style="background-color:#028ac7; padding-left:0px;padding-right:0px;">
                            <h2 class="" style="margin:0">{{metricas.clicksLastMonth}}</h2>
                            <i class="fa fa-3x fa-calendar-plus-o"></i>
                            <p class="mt-2 no-mb lead small-caps" translate="LBL_CLICKS_LAST_MONTH"></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Seen -->
            <div class="item">
                <!-- Total seen -->
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="panel panel panel-primary panel-dark text-center">
                        <div class="panel-body" style="background-color:#028ac7">
                            <h2 class="" style="margin:0">{{metricas.seen}}</h2>
                            <i class="fa fa-3x fa-eye"></i>
                            <p class="mt-2 no-mb lead small-caps text-lowercase" translate="LBL_SEEN"></p>
                        </div>
                    </div>
                </div>
                <!-- Total last seen -->
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="panel panel panel-primary panel-dark text-center">
                        <div class="panel-body" style="background-color:#028ac7; padding-left:0px;padding-right:0px;">
                            <h2 class="" style="margin:0">{{metricas.seenLastMonth}}</h2>
                            <i class="fa fa-3x fa-calendar"></i>
                            <p class="mt-2 no-mb lead small-caps text-lowercase" translate="LBL_SEEN_LAST_MONTH"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a href="#carousel-example-generic" class="btn-circle btn-circle-xs btn-circle-raised btn-circle-white left carousel-control" role="button" data-slide="prev"><i class="zmdi zmdi-chevron-left"></i></a>
        <a href="#carousel-example-generic" class="btn-circle btn-circle-xs btn-circle-raised btn-circle-white right carousel-control" role="button" data-slide="next"><i class="zmdi zmdi-chevron-right"></i></a>
    </div>

    <!-- Filters -->
    <div class="col-md-4 text-left">
        <!-- Refresh chart -->
        <div class="form-group" style="margin:0">
            <div class="col-md-12 text-right">
                <a href="javascript:void(0)" ng-click="metricas.get()" class="btn-circle btn-circle-raised btn-circle-primary" title="Actualizar gráfica">
                    <i class="fa fa-refresh"></i>
                </a>
            </div>
        </div>
        <!-- Countries -->
        <div class="col-md-12 form-group label-floating is-focused" style="margin-bottom:15px;padding:0;">
            <div class="input-group" style="width:100%">
                <label for="select222" class="col-md-5 control-label" translate="LBL_COUNTRIES"></label>
                <div class="col-md-12">
                    <oi-select oi-options="item.Consecutivo as item.DescripcionIdiomaBuscado for item in lists.countries track by item.Consecutivo"
                               ng-model="metricas.filter.PaisesParaBuscar"
                               multiple
                               placeholder="{{'PLACEHOLDER_DROPDOWNLIST' | translate}}">
                    </oi-select>
                </div>
            </div>
        </div>
        <!-- Categories -->
        <div class="col-md-12 form-group label-floating" style="padding:0;">
            <label for="select111" class="col-md-5 control-label" translate="LBL_SPORTS"></label>
            <div class="col-md-12">
                <oi-select oi-options="item.Consecutivo as item.DescripcionIdiomaBuscado for item in lists.categories track by item.Consecutivo"
                           ng-model="metricas.filter.CategoriasParaBuscar"
                           multiple
                           placeholder="{{'PLACEHOLDER_DROPDOWNLIST' | translate}}">
                </oi-select>
            </div>
        </div>
        <!-- Languages (Deleted) -->
        <!--
        <div class="col-md-12 form-group label-floating" style="padding:0;">
            <label for="select111" class="col-md-5 control-label">Idiomas</label>
            <div class="col-md-12">
                <oi-select oi-options="item.DescripcionIdiomaBuscado for item in lists.languages track by item.Consecutivo"
                           ng-model="metricas.filter.ListLanguages"
                           multiple
                           placeholder="Seleccione">
                </oi-select>
            </div>
        </div>
        -->

    </div>

    <!-- Graphic -->
    <div class="col-md-5 col-sm-12 col-xm-12 text-center" style="margin-top:20px;">
         <div class="circle" id="circles-1"></div>
    </div>

    <!-- Legend -->
    <div class="col-md-2 col-sm-12 col-xm-12 text-right" style="margin-top:20px;padding:0;">
        <h1 class="color-primary" translate="LBL_TOTAL_ADS"></h1>
        <span class="ms-logo animated zoomInDown animation-delay-5">{{metricas.metrica.NumeroAnuncios}}</span>
    </div>
</div>

@section ANGULARJS{
    <script src="~/Scripts/app/lib/ng-file-upload-shim.js"></script>
    <script src="~/Scripts/app/lib/ng-file-upload.js"></script>
    <script src="~/Scripts/app/lib/ui-cropper.js"></script>
    <script src="~/Scripts/app/lib/Chart.js"></script>
    <script src="~/Scripts/app/Advertiser/dashboardAdvertiser.js"></script>
    <script src="~/Scripts/app/lib/select-custom.js"></script>
}